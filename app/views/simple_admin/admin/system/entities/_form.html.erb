<%= form_for resource, url: form_url, html: { class: 'form-horizontal' } do |f| %>
  <section class="field">
    <div class="field__title">Model Class Name</div>
    <div class="field__content">
        <div class="select__wrapper">
          <%= f.select :model_klass_name, ApplicationRecord.descendants.map { |model| [model.name, model.name] }, {}, { class: 'select' } %>
        </div>
    </div>
  </section>

  <section class="field">
    <div class="field__title">Model Plural Name</div>
    <div class="field__content">
      <%= f.text_field :model_plural_name, class: 'input' %>
    </div>
  </section>

  <section class="field">
    <div class="field__title">Label</div>
    <div class="field__content">
      <%= f.text_field :label, class: 'input' %>
    </div>
  </section>

  <section class="field">
    <div class="field__title">Status</div>
    <div class="field__content">
      <%= f.check_box :status, class: 'input' %>
    </div>
  </section>

  <section class="field">
    <div class="field__title"></div>
    <div class="field__content">
      <%= f.submit class: 'button button--wide item-page__button' %>
    </div>
  </section>
<% end %>
