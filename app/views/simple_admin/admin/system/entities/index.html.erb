<section class="catalog-page">
  <header class="item-page__header">
    <h3 class="item-page__title">Entities</h3>
    <%= link_to 'New Entity', new_admin_system_entity_path, class: 'button item-page__submit' %>
  </header>


  <table class="table">
    <%= render 'simple_admin/admin/shared/collection/table_header', column_names: ['#', 'Model Class Name', 'Model Plural Name', 'Label', 'Status', 'Inbuilt'] %>

    <tbody class="table__body">
      <% @resources.each do |resource| %>
        <tr class="table__row">
          <td class="table__cell"><%= resource.id %></td>

          <td class="table__cell">
            <%= resource.model_klass_name %>
          </td>

          <td class="table__cell">
            <%= resource.model_plural_name %>
          </td>

          <td class="table__cell">
            <%= resource.label %>
          </td>

          <td class="table__cell">
            <%= resource.status_humanized %>
          </td>

          <td class="table__cell">
            <%= resource.inbuilt_humanized %>
          </td>

          <td class="table__cell">
            <%= link_to 'Edit', edit_admin_system_entity_path(resource), class: 'table__link' %>
          </td>

          <td class="table__cell">
            <%= link_to 'Delete', admin_system_entity_path(resource), class: 'table__link',
                                                    method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
