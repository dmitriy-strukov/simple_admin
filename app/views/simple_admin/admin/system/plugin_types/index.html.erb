<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
              Plugins
            </h1>
        </div>
    </div>
</div>


<div class="content">
  <div class="row">
    <div class="col-lg-12">
        <div class="block">
            <div class="block-content">
              <table class="table table-responsive table-striped table-borderless table-header-bg">
                  <%= render 'simple_admin/admin/shared/collection/table_header', column_names: ['#', 'Name', 'Status'] %>

                  <tbody>
                      <% @resources.each do |resource| %>
                        <tr>
                            <td class="text-center"><%= resource.id %></td>

                            <td>
                              <%= resource.name %>
                            </td>

                            <% if resource.active? %>
                              <td class="hidden-xs">
                                <span class="label label-danger"><%= resource.status_humanized %></span>
                              </td>
                            <% else %>
                              <td class="hidden-xs">
                                <span class="label label-success"><%= resource.status_humanized %></span>
                              </td>
                            <% end %>

                            <%= render_plugin_actions(resource) %>
                        </tr>
                      <% end %>
                  </tbody>
              </table>
            </div>
        </div>
    </div>
  </div>
</div>
