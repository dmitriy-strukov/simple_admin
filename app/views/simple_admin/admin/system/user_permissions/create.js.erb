<% if @resource.errors.present? %>
  $.notify(
    'Something went wrong!',
    'error',
    { autoHideDelay: 3000, position: 'right' }
  );
<% else %>
  var formContent = "<%= j render template: 'simple_admin/admin/system/user_roles/user_permissions/edit', locals: { permission: @resource } %>";

  $('#permissions-list').append(formContent);

  $.notify(
    'Permission successfully created!',
    'success',
    { autoHideDelay: 3000, position: 'right' }
  );
<% end %>
