<%= form_for resource, url: form_url, html: { class: 'form-horizontal' } do |f| %>
  <% entity_fields.latest.each do |entity_field| %>
    <%= render entity_field.template_path, field: entity_field, f: f %>
  <% end %>

  <section class="field">
    <div class="field__title"></div>
    <div class="field__content">
      <%= f.submit class: 'button button--wide item-page__button' %>
    </div>
  </section>
<% end %>
