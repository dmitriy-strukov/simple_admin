<% if @resource.errors.present? %>
  $.notify(
    'Something went wrong!',
    'error',
    { autoHideDelay: 3000, position: 'right' }
  );
<% else %>
  var formContent = "<%= j render template: 'simple_admin/admin/design/layouts/layout_plugins/edit', locals: { layout_plugin: @resource } %>";

  $('.layout-plugin-list').append(formContent);

  $.notify(
    'Layout Plugin successfully created!',
    'success',
    { autoHideDelay: 3000, position: 'right' }
  );
<% end %>
