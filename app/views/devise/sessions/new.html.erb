<div class="signin">
  <header class="signin__header">
    <h2 class="signin__title">Авторизуйтесь</h2>
    <p class="signin__error"> Такой логин и/или пароль не существует!</p>
  </header>
  <div class="signin__form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label(:email, class:"signin__label") do%>
        <%= f.email_field :email, autofocus: true, placeholder: "Логин", class: "input input--full-width input--slim signin__input signin__input--error" %>
        <svg class="signin__login-icon" width="16" height="16" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
          <g fill="none" fill-rule="evenodd">
            <path d="M8 8c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#BFC5C7" fill-rule="nonzero"></path>
            <path d="M-4-4h24v24H-4"></path>
          </g>
        </svg>
      <% end %>
      <%= f.label(:password, class:"signin__label") do%>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: "input input--full-width input--slim signin__input" %>
        <svg class="signin__password-icon" width="22" height="12" viewBox="0 0 22 12" xmlns="http://www.w3.org/2000/svg">
          <g fill="none" fill-rule="evenodd">
            <path d="M-1-6h24v24H-1"></path>
            <path d="M11.65 4C10.83 1.67 8.61 0 6 0 2.69 0 0 2.69 0 6s2.69 6 6 6c2.61 0 4.83-1.67 5.65-4H16v4h4V8h2V4H11.65zM6 8c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z" fill="#BFC5C7" fill-rule="nonzero"></path>
          </g>
        </svg>
      <% end %>


      <div class="actions">
        <button class="button signin__submit" type="submit">Войти</button>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>

