<%= form_for entity_field, url: admin_entity_field_path(entity_field), html: { 'data-entity-field-item-id' => entity_field.id }, remote: true do |f| %>
  <%= render 'admin/entities/entity_field_attributes', entity: entity, f: f %>

  <section class="field">
    <div class="field__title"></div>
    <div class="field__content">
      <%= f.submit value: 'Обновить', class: 'button button--wide item-page__button' %>
      <%= link_to 'Удалить', admin_entity_field_path(entity_field), class: 'button button--wide button--second-color item-page__button', method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
    </div>
  </section>
<% end %>
