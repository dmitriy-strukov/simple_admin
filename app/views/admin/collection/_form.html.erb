<div class="item-page__content">
  <%= form_for resource, url: form_url do |f| %>

    <% resource_fields.each do |field| %>
      <%= render "#{field.entity_field_type.template}/#{field.display}", f: f, field: field %>
    <% end %>

    <section class="field">
      <div class="field__title"></div>
      <div class="field__content">
        <%= f.submit class: 'button button--wide item-page__button' %>
      </div>
    </section>
  <% end %>
</div>
